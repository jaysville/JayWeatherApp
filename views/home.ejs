<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>JayWeatherApp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <link rel="stylesheet" href="/app.css">
</head>


<body class=" d-flex flex-column vh-100 justify-content-center">




  <main class="container justify-content-center align-items-center">

    <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 ">
        <div id="imgDiv" class="d-flex justify-content-center animate__animated animate__fadeInDown ">
          <img src="cloudy.png" id="logo" class="img-fluid" alt="">
        </div>

        <h1 id="title" class="text-center mb-3 display-4 animate__animated animate__slideInLeft"> <b>Weather Today</b>
        </h1>

        <form action="/weather" method="post" class="validated-form" novalidate>

          <input type="text" name="city" id="city" class="form-control rounded-pill mb-3  animate__animated animate__fadeInUp" placeholder="Enter city name" required>
          <div class="d-flex justify-content-center animate__animated animate__zoomIn animate__delay-1s">
            <button id="button" class="btn btn-lg rounded-pill">Search</button>
          </div>
        </form>
        <div class="footer mt-5 d-flex justify-content-center">
          <span class="text-muted"> &copy; Olaotan</span>
        </div>
      </div>
    </div>
  </main>





  <script>
    (function() {
      'use strict'

      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      const forms = document.querySelectorAll('.validated-form')

      // Loop over them and prevent submission
      Array.from(forms)
        .forEach(function(form) {
          form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }

            form.classList.add('was-validated')
          }, false)
        })
    })()
  </script>
</body>

</html>